                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% userCart.cart.forEach(function(cartItem) { %>
                                            <tr data-product-id="<%= cartItem.productId._id %>">
                                                <td class="product-col">
                                                    <div class="product">
                                                        <figure class="product-media">
                                                            <a href="#">
                                                                <img src="/adminassets/imgs/products/<%= cartItem.productId.image[0] %>"" alt="IMG" srcset="">
                                                                <script>
                                                                    alert(cartItem.productId.image[0])
                                                                </script>
                                                            </a>
                                                        </figure>
                                                        <h3 class="product-title">
                                                            <a href="#"><%= cartItem.productId.productName %></a>
                                                        </h3>
                                                    </div>
                                                </td>
                                                <td class="price-col">$<%= cartItem.productId.salePrice %></td>
                                                <td class="quantity-col">
                                                    <div class="cart-product-quantity">
                                                        <input type="number" class="form-control" value="<%= cartItem.quantity %>" min="1" max="<%= cartItem.productId.quantity %>" step="1" data-decimals="0" required onchange='updateTotal(this, <%= cartItem.productId.quantity %>)'>
                                                    </div>
                                                </td>
                                                <div id="outOfStockModal" style="display:none; position: fixed; left: 50%; top: 50%; transform: translate(-50%, -50%); background: white; border: 1px solid black; padding: 20px; z-index: 1000;">
                                                    <p>Sorry, you can't add more units of this product to the cart as it's out of stock.</p>
                                                    <button onclick="closeOutOfStockModal()">Close</button>
                                                </div>                                                                                                                                       
                                                <td class="total-col">$<%= (cartItem.productId.salePrice * cartItem.quantity).toFixed(2) %></td>
                                                <td class="remove-col">
                                                    <button class="btn-remove" onclick="removeCartItem('<%= cartItem.productId._id %>', this)"><i class="icon-close"></i></button>
                                                </td>                                                
                                            </tr>
                                        <% }); %>                                        
                                    </tbody>
                                </table>
                            
                                <div class="cart-bottom">
                                    <div class="cart-discount">
                                        <form action="#">
                                            <div class="input-group">
                                                <input type="text" class="form-control" required placeholder="coupon code">
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-primary-2" type="submit"><i class="icon-long-arrow-right"></i></button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <a href="#" id="update-cart" class="btn btn-outline-dark-2"><span>UPDATE CART</span><i class="icon-refresh"></i></a>
                                </div>
                            </div>
                            
                            <script>
                                document.addEventListener("DOMContentLoaded", function() {
                                    document.querySelectorAll('tr[data-product-id]').forEach(row => {
                                        const productId = row.getAttribute('data-product-id');
                                        const quantityInput = row.querySelector('.cart-product-quantity input');
                                        const storedQuantity = localStorage.getItem(`cartQuantity_${productId}`);
                                        
                                        if (storedQuantity) {
                                            quantityInput.value = storedQuantity;
                                            updateTotal(quantityInput);
                                        }
                                    });
                                
                                    updateGrandTotal();
                                });
                                
                                function updateTotal(input, maxQuantity) {
                                    const quantity = parseInt(input.value);
                                    if (quantity > maxQuantity) {
                                        alert(`Sorry, only ${maxQuantity} units are available in stock.`);
                                        input.value = maxQuantity; 
                                    }

                                    const row = input.closest("tr");
                                    const price = parseFloat(row.querySelector(".price-col").innerText.replace("$", ""));
                                    const total = price * quantity;
                                    row.querySelector(".total-col").innerText = "$" + total.toFixed(2);

                                    updateGrandTotal();
                                }

                                function updateGrandTotal() {
                                    let grandTotal = 0;
                                    document.querySelectorAll('.total-col').forEach(function(totalCol) {
                                        grandTotal += parseFloat(totalCol.innerText.replace("$", ""));
                                    });
                                    document.getElementById('grandTotal').innerText = "$" + grandTotal.toFixed(2);
                                }
                                
                                document.querySelectorAll('.cart-product-quantity input').forEach(input => {
                                    input.addEventListener('change', function() {
                                        const row = this.closest('tr');
                                        const productId = row.getAttribute('data-product-id');
                                        localStorage.setItem(`cartQuantity_${productId}`, this.value);
                                        updateTotal(this);
                                    });
                                });
                                
                                function removeCartItem(productId, buttonElement) {
                                    fetch(`/remove-cart/${productId}`, {
                                        method: 'GET',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        }
                                    })
                                    .then(response => {
                                        if (response.ok) {
                                            console.log("Item removed from cart successfully");
                                            buttonElement.closest("tr").remove();
                                            localStorage.removeItem(`cartQuantity_${productId}`); 
                                            updateGrandTotal(); 
                                        } else {
                                            console.error("Failed to remove item from cart");
                                        }
                                    })
                                    .catch(error => {
                                        console.error("Error:", error);
                                    });
                                }
                                
                                document.getElementById('update-cart').addEventListener('click', function(event) {
                                    event.preventDefault();
                                
                                    const productIds = [];
                                    const quantities = [];
                                
                                    document.querySelectorAll('tr[data-product-id]').forEach(row => {
                                        const productId = row.getAttribute('data-product-id');
                                        const quantityInput = row.querySelector('.cart-product-quantity input');
                                        if (productId && quantityInput) {
                                            productIds.push(productId);
                                            quantities.push(quantityInput.value);
                                        }
                                    });
                                
                                    fetch('/change-quantity', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({ productId: productIds, quantity: quantities })
                                    }).then(response => {
                                        if (response.ok) {
                                            console.log("Quantities updated successfully");
                                            window.location.reload();
                                        } else {
                                            console.error("Failed to update quantities");
                                        }
                                    }).catch(error => console.error('Error:', error));
                                });
                            </script>
                                
                            
