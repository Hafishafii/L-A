                </ul><!-- End .menu -->
            </nav><!-- End .main-nav -->

        </div>
    </header>

    <div class="page-wrapper">
        <h1>My Orders</h1>
        <% if (orders.length > 0) { %>
            <ul>
                <% orders.forEach(order => { 
                    let totalQuantity = order.products.reduce((acc, product) => acc + product.quantity, 0);
                %>
                    <li>
                        <p><strong>Order ID:</strong> <%= order._id %></p>
                        <p><strong>Total Amount:</strong> $<%= order.totalAmount %></p>
                        <p><strong>Payment Method:</strong> <%= order.paymentDetails %></p>
                        <p><strong>Payment Status:</strong> <%= order.paymentStatus %></p>
                        <p><strong>Shipping Method:</strong> <%= order.shippingMethod %></p>
                        <p><strong>Total Items:</strong> <%= totalQuantity %></p>
                        <p><strong>Order Status:</strong> <%= order.orderStatus %></p>
    
                        <p class="info"><strong>Created At:</strong> <%= order.createdAt.toDateString() %></p>
                        <p class="info"><strong>Updated At:</strong> <%= order.updatedAt.toDateString() %></p>
                        <% if (order.deliveredOn) { %>
                            <p class="info"><strong>Delivered On:</strong> <%= order.deliveredOn.toDateString() %></p>
                        <% } %>
    
                        <% if (order.orderStatus.toLowerCase() !== 'cancelled') { %>
                            <form id="cancel-order-form-<%= order._id %>" action="/cancel-order" method="POST">
                                <input type="hidden" name="orderId" value="<%= order._id %>">
                                <button type="button" class="cancel-order-btn">Cancel Order</button>
                            </form>
                        <% } %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No orders found.</p>
        <% } %>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const cancelOrderButtons = document.querySelectorAll('.cancel-order-btn');
    
            cancelOrderButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const orderId = this.closest('form').querySelector('input[name="orderId"]').value;
    
                    Swal.fire({
                        title: 'Are you sure?',
                        text: 'Please provide a reason for cancellation:',
                        input: 'textarea',
                        inputPlaceholder: 'Reason for cancellation',
                        showCancelButton: true,
                        confirmButtonText: 'Cancel Order',
                        cancelButtonText: 'Cancel',
                        preConfirm: (reason) => {
                            if (reason) {
                                const form = document.getElementById('cancel-order-form-' + orderId);
                                form.querySelector('textarea[name="cancellationReason"]').value = reason;
                                form.submit();
                            }
                        }
                    });
                });
            });
        });
    </script>
    

